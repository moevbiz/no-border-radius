{
    "manifest_version": 2,
    "name": "no-border-radius",
    "version": "1.0",
  
    "description": "Removes round corners on all elements on a website",

    "permissions": [
        "activeTab",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },

    "web_accessible_resources": [
        "locations.txt"
    ],
  
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["script.js"],
        "run_at": "document_end"
      }
    ]
}